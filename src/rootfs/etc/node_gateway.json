{
    "servers":{
        "main_http_server":{
            "type":"cyfs-warp",
            "bind":"0.0.0.0",
            "http_port":3180,
            "tls_port":3143,
            "hosts": {
                "another.com": {
                  "routes": {
                    "/": {
                      "upstream": "http://localhost:9090"
                    }
                  }
                },
                "*": {
                    "routes": {
                        "/static": {
                            "local_dir": "/tmp/"
                        },
                        "/kapi/system_config":{
                            "upstream":"tcp://127.0.0.1:3200"
                        }
                    }
                }
            }
        }
    },
    "dispatcher" : {
        "tcp://0.0.0.0:3180":{
            "type":"server",
            "id":"main_http_server"
        },
        "tcp://0.0.0.0:3143":{
            "type":"server",
            "id":"main_http_server"
        }
    }
}