{
    "device_key_path": "./rootfs/etc/node_private_key.pem",
    "dispatcher": {
        "tcp://0.0.0.0:443": {
            "id": "main_http_server",
            "type": "server"
        },
        "tcp://0.0.0.0:80": {
            "id": "main_http_server",
            "type": "server"
        }
    },
    "inner_services": {
        "zone_provider": {
            "type": "zone-provider"
        }
    },
    "servers": {
        "main_http_server": {
            "bind": "0.0.0.0",
            "hosts": {
                "*": {
                    "enable_cors": true,
                    "routes": {
                        "/kapi/system_config": {
                            "upstream": "http://127.0.0.1:3200"
                        },
                        "/kapi/repo": {
                            "upstream": "http://127.0.0.1:4000"
                        },
                        "/kapi/verify_hub": {
                            "upstream": "http://127.0.0.1:3300"
                        },
                        "/resolve": {
                            "inner_service": "zone_provider"
                        }
                    }
                },
                "home-station.*": {
                    "routes": {
                        "/": {
                            "upstream": "http://127.0.0.1:20080"
                        }
                    }
                },
                "sys.*": {
                    "enable_cors": true,
                    "routes": {
                        "/": {
                            "local_dir": "./rootfs/bin/control_panel"
                        },
                        "/kapi/system_config": {
                            "upstream": "http://127.0.0.1:3200"
                        },
                        "/kapi/repo": {
                            "upstream": "http://127.0.0.1:4000"
                        },
                        "/kapi/verify_hub": {
                            "upstream": "http://127.0.0.1:3300"
                        }
                    }
                }
            },
            "http_port": 80,
            "tls_port": 443,
            "type": "cyfs-warp"
        }
    }
}