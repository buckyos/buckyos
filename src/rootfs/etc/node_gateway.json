{
    "servers":{
        "main_http_server":{
            "type":"cyfs-warp",
            "bind":"0.0.0.0",
            "http_port":80,
            "tls_port":443,
            "hosts": {
                "*": {
                    "routes": {
                        "/static": {
                            "local_dir": "/tmp/"
                        },
                        "/kapi/system_config":{
                            "upstream":"tcp://127.0.0.1:3200"
                        },
                        "/home/":{
                            "upstream":"tcp://127.0.0.1:20080"
                        }
                    }
                }
            }
        }
    },
    "dispatcher" : {
        "tcp://0.0.0.0:80":{
            "type":"server",
            "id":"main_http_server"
        },
        "tcp://0.0.0.0:443":{
            "type":"server",
            "id":"main_http_server"
        }
    }
}