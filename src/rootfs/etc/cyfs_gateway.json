{
    "inner_services":{
        "main_sn" : {
            "type" : "cyfs_sn"
        }
    },
    "servers":{
        "main_http_server":{
            "type":"cyfs-warp",
            "bind":"0.0.0.0",
            "http_port":8000,
            "tls_port":443,
            "hosts": {
                "another.com": {
                  "routes": {
                    "/": {
                      "upstream": "http://localhost:9090"
                    }
                  }
                },
                "example.com": {
                    "routes": {
                        "/api": {
                            "upstream": "rtcp://"
                        },
                        "/static": {
                            "local_dir": "/tmp/"
                        },
                        "/kapi/sn":{
                            "inner_service":"main_sn"
                        }
                    }
                }
            }
        }
    },
    "dispatcher" : {
        "tcp://0.0.0.0:80":{
            "type":"server",
            "id":"main_http_server"
        },
        "tcp://0.0.0.0:443":{
            "type":"server",
            "id":"main_http_server"
        },

        "tcp://0.0.0.0:6001":{
            "type":"forward",
            "target":"tcp://192.168.1.188:8888"
        },
        "udp://0.0.0.0:6002":{
            "type":"forward",
            "target":"udp://192.168.1.188:8889"
        }
    }
}