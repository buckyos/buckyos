{
    "name": "buckyos",
    "version": "0.5.1",
    "directories": {
        "source": "/opt/buckyos",
        "target": "/opt/buckyos",
        "source_bin": "./rootfs/bin",
        "target_bin": "/opt/buckyos/bin"
    },
    "commands": {
      "build": [
        "echo 'MAKE sure you already build the linux version of buckyos (result store in rootfs/bin)'"
      ],
      "build_all": [
        "python3 buckyos-install --all --app=buckyos",
        "python3 make_config.py {{buckyos.node_group}}"
      ],
      "install": [
        "sudo chmod 777 -R /opt/buckyos/bin/"
      ],
      "start": ["sudo nohup /opt/buckyos/bin/node-daemon/node_daemon --enable_active > /dev/null 2>&1 &"],
      "stop": ["sudo python3 /opt/buckyos/bin/stop.py"]
    }
  }