<style>
    .container {
        display: flex;
        flex-direction: column;
        min-width: 480px;
        gap: 12px;
    }

    .button-container {
        display: flex;
        justify-content: center; 
        align-items: center;
    }

    md-filled-text-field {
        width: 100%;
    }
</style>
