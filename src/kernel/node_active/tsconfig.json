{
  "include": [
    "src",
    "components",
    "dlg",
    "utils",
    "test",
    "**/*.ts",
    "**/*.tsx",
    "typings.d.ts"
  ],
  "exclude": ["node_modules/**", "dist/**", "res", "public"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "target": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "types": ["vite/client", "./typings.d.ts"],
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "inlineSourceMap": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": false,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["components/*"],
      "@/utils/*": ["utils/*"]
    }
  }
}
