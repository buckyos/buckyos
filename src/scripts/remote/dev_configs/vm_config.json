{
  "templates": {
    "ubuntu_basic": {
      "image": "ubuntu:24.04",
      "hardware": {
        "cpu": 1,
        "memory": "1G",
        "disk": "10G"
      },
      "base_services": {
        "docker": true,
        "ssh": true
      },
      "init_commands": [
        "apt-get update",
        "apt-get install -y docker.io curl wget"
      ]
    },
    "ubuntu_buckyos": {
      "image": "ubuntu:24.04",
      "hardware": {
        "cpu": 2,
        "memory": "2G",
        "disk": "20G"
      },
      "base_services": {
        "docker": true,
        "ssh": true
      },
      "init_commands": [
        "apt-get update",
        "apt-get install -y docker.io curl wget",
        "pip3 install docker --break-system-packages"
      ]
    }
  }
}

