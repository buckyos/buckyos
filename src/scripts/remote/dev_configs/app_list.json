{
  "apps": {
    "buckyos": {
      "name": "buckyos",
      "version": "latest",
      "directories": [
        {
          "source": "rootfs",
          "target": "/opt/buckyos",
          "type": "tar"
        }
      ],
      "commands": {
        "install": [
          "mkdir -p /opt/buckyos",
          "cd /opt/buckyos && tar xzf /tmp/buckyos.tar.gz"
        ],
        "start": "nohup /opt/buckyos/bin/node_daemon/node_daemon --enable_active > /dev/null 2>&1 &",
        "stop": "python3 /opt/buckyos/bin/killall.py"
      }
    },
    "web3_bridge": {
      "name": "web3_bridge",
      "version": "latest",
      "directories": [
        {
          "source": "web3_bridge",
          "target": "/opt/web3_bridge",
          "type": "rsync"
        }
      ],
      "commands": {
        "install": [
          "mkdir -p /opt/web3_bridge"
        ],
        "start": "systemctl start web3_gateway",
        "stop": "systemctl stop web3_gateway"
      }
    }
  }
}

